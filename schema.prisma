generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

generator pothos {
  provider        = "prisma-pothos-types"
  previewFeatures = ["views"]
  prismaUtils     = "true"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.sqlite"
}

model Transaction {
  id          String                     @id @unique
  source      String
  date        DateTime
  description String
  amount      Float
  currency    String
  categories  TransactionsOnCategories[]

  @@map("transactions")
}

model Category {
  id               Int                        @id @default(autoincrement())
  name             String
  parentCategory   Category?                  @relation("ParentCategory", fields: [parentCategoryId], references: [id])
  parentCategoryId Int?
  subCategories    Category[]                 @relation("ParentCategory")
  transactions     TransactionsOnCategories[]

  @@unique([name, parentCategoryId])
  @@map("categories")
}

model TransactionsOnCategories {
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId String

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  amount Int

  @@id([transactionId, categoryId])
  @@map("transactions2categories")
}

view StatisticPerMonths {
  id      String @id @unique
  year    Int
  month   Int
  income  Float
  outcome Float

  @@map("transactions_statistic_per_months")
}

view StatisticPerYears {
  id      String @id @unique
  year    Int
  income  Float
  outcome Float

  @@map("transactions_statistic_per_years")
}
