generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

generator pothos {
  provider        = "prisma-pothos-types"
  previewFeatures = ["views"]
  prismaUtils     = "true"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.sqlite"
}

model Transaction {
  id          String   @id @unique
  source      String
  date        DateTime
  description String
  amount      Float
  currency    String

  @@map("transactions")
}

view StatisticPerMonths {
  id      String @id @unique
  year    Int
  month   Int
  income  Float
  outcome Float

  @@map("transactions_statistic_per_months")
}
