datasource db {
  provider = "sqlite"
  url      = "file:./database.sqlite"
}

generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider    = "prisma-pothos-types"
  prismaUtils = true
}

model Transaction {
  id          String   @id @unique
  source      String
  date        DateTime
  description String
  amount      Float
  currency    String

  @@map("transactions")
}
