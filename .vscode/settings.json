{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "sqltools.connections": [
    {
      "previewLimit": 50,
      "driver": "SQLite",
      "name": "DB",
      "database": "${workspaceFolder:budget}/database.sqlite"
    }
  ],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "sqltools.useNodeRuntime": true
}
